{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es5"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
